<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4022.7">
  <POU Name="MIRROR" Id="{6f6e40de-fc3a-44ea-81e5-39d0f5cb2767}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION MIRROR : STRING(STRING_LENGTH)
VAR_INPUT
	str : STRING(STRING_LENGTH);
END_VAR
VAR
	pi : POINTER TO ARRAY[1..255] OF BYTE;
	po : POINTER TO BYTE;
	lx: INT;
	i: INT;
END_VAR

(*
version 1.1	29. mar. 2008
programmer 	hugo
tested by	tobias

this function reverses an input string.

*)]]></Declaration>
    <Implementation>
      <ST><![CDATA[pi := ADR(str);
po := ADR(mirror);
lx := LEN(str);
FOR i := lx TO 1 BY - 1 DO
	po^ := pi^[i];
	po := po + 1;
END_FOR;
(* close output string *)
po^:= 0;


(* revision histroy
